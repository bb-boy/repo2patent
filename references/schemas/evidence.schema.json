{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "evidence",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "path",
      "line_range",
      "excerpt"
    ],
    "properties": {
      "id": {
        "type": "string"
      },
      "path": {
        "type": "string"
      },
      "line_range": {
        "type": "array",
        "items": {
          "type": "integer"
        },
        "minItems": 2,
        "maxItems": 2
      },
      "excerpt": {
        "type": "string"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "why_selected": {
        "type": "string"
      },
      "source": {
        "type": "string"
      }
    },
    "additionalProperties": true
  }
}